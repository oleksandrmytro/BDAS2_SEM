<UserControl x:Class="BDAS2_SEM.View.DoctorViews.MainDoctorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:BDAS2_SEM.View.DoctorViews"
             mc:Ignorable="d"
             Height="Auto" Width="Auto">
    <Grid>
        <TextBlock Text="My Patients" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Patients}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="10" Width="200">
                            <StackPanel>
                                <TextBlock Text="{Binding Jmeno}" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="{Binding Prijmeni}" FontSize="14"/>
                                <TextBlock Text="Phone:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Telefon}" FontSize="12"/>
                                <TextBlock Text="Date of Birth:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding DatumNarozeni, StringFormat={}{0:dd/MM/yyyy}}" FontSize="12"/>
                                <TextBlock Text="Gender:" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Pohlavi}" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>